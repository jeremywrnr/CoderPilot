@import 'nib'

html
  font-family Verdana, sans-serif
  padding 10px

html, body, .full-height
    height: 100%

body
    margin: 10px
    padding: 0px

.navbar
    border: 1px solid rgba(0, 0, 0, 1)
    border-radius: 4px 4px 0px 0px

.row.upper
    height: 85%

.row.footer
    height: 15%

.horiz-center
    margin-right: auto
    margin-left: auto

.list
    overflow: auto
    max-height: 40%

.sidebar
    margin-right: auto
    margin-left: auto
    max-width: 200px

.edit:hover
    background-color: orange
    color: white

.del:hover
    background-color: red
    color: white

.container
    padding: 0px

.editor-container
    position: relative
    padding: 0px

#editor.shareJSAce
  position: absolute
  top: 52px
  bottom: 0
  right: 0
  left: 0

#editor.shareJSText
  width: 100%
  height: 80%

#login-buttons
    line-height: 1.42857143
    background-color: black
    border: 1px solid #ccc
    vertical-align: middle
    text-align: center
    margin-right: auto
    margin-left: auto
    border-radius: 4px
    padding: 6px 12px
    max-width: 150px
    display: block
    .login-link-text, &:hover
        text-decoration: none
        color: white

