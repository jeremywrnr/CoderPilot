@import 'nib'

html
  padding 10px
  font-family Verdana, sans-serif

html, body, .full-height
    height: 100%

body
    margin: 10px
    padding: 0px

#login-buttons
    line-height: 1.42857143
    background-color: black
    border: 1px solid #ccc
    vertical-align: middle
    text-align: center
    margin-right: auto
    margin-left: auto
    border-radius: 4px
    padding: 6px 12px
    max-width: 150px
    display: block
    .login-link-text, &:hover
        text-decoration: none
        color: white

.row.upper
    height: 85%

.row.footer
    height: 15%

.list
    overflow: auto
    max-height: 40%

.container
    padding: 0px

.editor-container
    position: relative
    padding: 0px

#editor.shareJSAce
  position: absolute
  left: 0
  right: 0
  top: 60px
  bottom: 0

#editor.shareJSText
  width: 100%
  height: 80%
