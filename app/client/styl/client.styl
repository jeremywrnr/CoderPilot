@import 'nib'

html
    font-family Verdana, sans-serif
    padding 10px

html, body, .full-height
    height: 100%

.navbar
    border: 1px solid rgba(0, 0, 0, 1)
    border-radius: 4px 4px 0px 0px

.sidebar
    margin-right: auto
    margin-left: auto
    max-width: 250px

.center
    margin-right: auto
    margin-left: auto

.list
    max-height: 350px
    overflow: auto

.top-list
    margin-top: 10px

.panel
    margin-top: 20px

.btn:hover
    color: white

.grn:hover
    background-color: green

.edit:hover
    background-color: orange

.del:hover
    background-color: red

.content-container
    max-width: 600px

.editor-container
    position: relative
    padding: 0px

#active-file
    background-color: #d9edf7;
    color: rgb(49, 112, 143);

#editor.shareJSAce
    position: absolute
    margin-bottom: 15px
    top: 52px
    bottom: 0
    right: 0
    left: 0

#editor.shareJSText
    width: 100%
    height: 80%

#login-buttons
    line-height: 1.42857143
    background-color: black
    border: 1px solid #ccc
    border-radius: 4px
    vertical-align: middle
    text-align: center
    margin-right: auto
    margin-left: auto
    padding: 6px 12px
    display: block
    .login-link-text, &:hover
        text-decoration: none
        color: white
