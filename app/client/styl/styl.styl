html
    font-family Verdana, sans-serif
    padding 10px

html, body, .full-height
    height 100%

.navbar
    border 1px solid rgba(0, 0, 0, 1)
    border-radius 4px 4px 0px 0px

.sidebar
    margin-right auto
    margin-left auto
    max-width 250px
    max-height 100%
    position fixed

.sidelist
    max-height 20vh
    overflow auto

.center
    display block
    margin auto

.hidden
    visibility hidden

.panel
    margin-top 20px

.well, .list-group
    margin 0px

.navbut
    color black

a.btn
    background rgb(192, 192, 192)
    color rgb(85, 85, 85)
    text-decoration none

a.btn-nav
    background rgb(51, 122, 183);
    color white

.btn:hover
    color white

.grn:hover
    background-color green

.edit:hover
    background-color orange

.del:hover
    background-color red

.content-container
    max-width 600px

.editor-container
    position relative
    padding 0px

#active-file, #active-commit, #active-issue, #active-task
    background-color #d9edf7
    color rgb(49, 112, 143)

#editor.shareJSAce
    position absolute
    margin-bottom 15px
    top 52px
    bottom 0
    right 0
    left 0

#editor.shareJSText
    width 100%
    height 80%
