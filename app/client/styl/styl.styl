html
    font-family Verdana, sans-serif
    padding 10px

html, body, .full-height
    height 100%

.mainbody
    padding-top 40px

.sidebar
    top 50px
    left 20px
    max-width 30vw
    max-height 100%
    position fixed

.sidelist
    max-height 25vh
    overflow auto

.center
    display block
    margin auto

.hidden
    visibility hidden

.wide
    max-width 500px
    width 100%

.panel
    margin-top 20px

.well, .list-group
    margin 0px

a.btn
    background rgb(192, 192, 192)
    color rgb(85, 85, 85)
    text-decoration none

.btn:hover
    color white

.grn:hover
    background-color green

.edit:hover
    background-color orange

.del:hover
    background-color red

.content-container
    max-width 600px

#active-file
#active-commit
#active-issue
#active-task
    background-color #d9edf7
    color rgb(49, 112, 143)

.navbar-code
    border 1px solid rgba(0, 0, 0, 1)
    border-radius 4px 4px 0px 0px
    background-color white

.editor-container
    position relative
    padding 20px 0px

#editor.shareJSAce
    position absolute
    margin-bottom 15px
    top 72px
    bottom 0
    right 0
    left 0

#editor.shareJSText
    width 100%
    height 80%
