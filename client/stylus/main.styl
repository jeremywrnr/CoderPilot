// stylus mixins

border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments

// main stylus

html
    font-family Verdana, sans-serif
    padding 10px

html, body, .full-height
    height 100%

h5
    text-decoration underline

//.mainbody

.main-content
    top 50px
    left 30vw
    width 70vw
    max-width 70vw
    position absolute

.sidebar
    top 50px
    left 0px
    width 30vw
    max-width 30vw
    max-height 100%
    position fixed
    border-right: thin dotted #222;

.panel
.panel-heading
    border-width 1px 0px 0px 0px
    border-radius 0px
    margin-bottom 0px
    margin-top 0px

.sidelist
    max-height 30vh
    overflow-y scroll
    overflow-x hidden

.nav.sidelist > li.msg
.nav.sidelist > li.file > a
    padding 5px

.center
    display block
    margin auto

.round
    border-radius(4px)

.hidden
    visibility hidden

.white
    background white

.wide
    max-width 500px
    width 100%

.wider
    width 100%

.nomargin
    margin 0px

.nomargin-image
    margin-top -20px


a.btn
    background buttonface
    color rgb(85, 85, 85)
    text-decoration none

.btn:hover
    color white

.grn:hover
    background-color green

.edit:hover
    background-color orange

.del:hover
    background-color red

#active-file
#active-commit
#active-issue
#active-task
button.list-group-item:hover
    background-color #d9edf7
    color rgb(49, 112, 143)

#mainhead
    background-color #337AB7
    color white
    height 48px
#mainhead p
    font-size 16px

#editor-container
    height 800px

#editor
    position absolute
    top 48px
    bottom 0
    right 0
    left 0

// line numbering the diffs

pre.diff
    line-height 1
    border none
    margin 0
pre.ins
    background rgb(223, 240, 216)
pre.del
    background rgb(242, 222, 222)
span.lineno
    font-style italic
    margin-left 0.5em
    float left

// smaller break

@media (max-width: 200px) {
    .navbar-header { float: none; }
    .navbar-toggle { display: block; }
    .navbar-collapse { border-top: 1px solid transparent; box-shadow: inset 0 1px 0 rgba(255,255,255,0.1); }
    .navbar-collapse.collapse { display: none!important; }
    .navbar-nav { float: none!important; margin: 7.5px -15px; }
    .navbar-nav>li { float: none; }
    .navbar-nav>li>a { padding-top: 10px; padding-bottom: 10px; }
    .navbar-text { float: none; margin: 15px 0; }
    .navbar-collapse.collapse.in { display: block!important; }
    .collapsing { overflow: hidden!important; }
}
